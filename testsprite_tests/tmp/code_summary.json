{
  "tech_stack": [
    "TypeScript",
    "Next.js 16",
    "Supabase",
    "Google Gemini API",
    "Tailwind CSS"
  ],
  "features": [
    {
      "name": "generate-post",
      "description": "Generates a blog post using Google Gemini for text and Pollinations.ai for images. Saves to Supabase 'posts' table.",
      "files": [
        "src/app/api/generate-post/route.ts"
      ],
      "api_doc": {
        "openapi": "3.0.0",
        "paths": {
          "/api/generate-post": {
            "post": {
              "summary": "Generate a new blog post",
              "responses": {
                "200": {
                  "description": "Post generated successfully",
                  "content": {
                    "application/json": {
                      "schema": {
                        "type": "object",
                        "properties": {
                          "success": { "type": "boolean" },
                          "keyword": { "type": "string" },
                          "title": { "type": "string" },
                          "imageUrl": { "type": "string" }
                        }
                      }
                    }
                  }
                },
                "500": {
                  "description": "Server error",
                  "content": {
                    "application/json": {
                      "schema": {
                        "type": "object",
                        "properties": {
                          "error": { "type": "string" }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  ]
}
